{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.svelte$": "svelte-jester",
    "^.+\\.js$": "babel-jest"
  },
  "moduleFileExtensions": ["js", "svelte"],
  "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"],
  "transformIgnorePatterns": ["node_modules/(?!(daisyui)/)"]
}